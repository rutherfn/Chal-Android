<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tbForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/back_toolbar_height"
        layout="@layout/stock_toolbar_with_text"
        />

    <Button
        android:id="@+id/ntmCheckAllChallenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_12dp"
        android:background="@drawable/corner_button"
        android:layout_marginTop="@dimen/margin_16dp"
        android:minHeight="48dp"
        android:textColor="@color/colorSmokeWhite"
        android:textSize="@dimen/sub_header_text_size"
        android:textStyle="bold"
        android:text="@string/check_all_challenges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>