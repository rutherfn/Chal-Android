<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/padding_30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSmokeWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivHomeProfilePicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

            <TextView
                android:id="@+id/tvHomeUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="TextView"
                android:textSize="@dimen/sub_header_text_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ivHomeProfilePicture"
                app:layout_constraintStart_toEndOf="@+id/ivHomeProfilePicture"
                app:layout_constraintTop_toTopOf="@+id/ivHomeProfilePicture" />

    <ImageView
        android:id="@+id/ivShareHome"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:background="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/tvHomeUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvHomeUsername"
        />

    <ImageView
        android:id="@+id/ivHomePostImage"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHomeProfilePicture"
        app:srcCompat="@drawable/challengesamplethree"
        />

    <Button
        android:id="@+id/btnDayOfChallenge"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="@dimen/margin_6dp"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:layout_marginTop="@dimen/margin_6dp"
        android:padding="6dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="Day 1"
        app:layout_constraintStart_toStartOf="@+id/ivHomePostImage"
        app:layout_constraintTop_toBottomOf="@+id/ivHomePostImage"
        />

            <TextView
                android:id="@+id/tvHomeChallengeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6dp"
                android:padding="@dimen/padding_6dp"
                android:text="7 DAYS OF Meditation - HEALTH AND WELLNESS"
                android:textSize="@dimen/sub_header_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/btnDayOfChallenge"
                app:layout_constraintTop_toBottomOf="@+id/btnDayOfChallenge"
                />

            <TextView
                android:id="@+id/tvChallengepostDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_6dp"
                android:text="Lorem ipsumk dolor sir amet, consetutur sadisciping eltir, sed diam nonumy"
                android:textSize="@dimen/body_text_size"
                app:layout_constraintStart_toStartOf="@+id/tvHomeChallengeTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvHomeChallengeTitle"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:paddingTop="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/colorLightGray"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
