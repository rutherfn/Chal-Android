<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:paddingLeft="@dimen/margin_10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="16dp"
    android:background="#3b3b38"
    android:layout_height="100dp">

            <ImageView
        android:id="@+id/ivFire"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_fire"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvChallengeViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="8dp"
        android:layout_marginLeft="9dp"
        android:textColor="@color/colorSmokeWhite"
        app:layout_constraintBottom_toBottomOf="@+id/ivFire"
        app:layout_constraintStart_toEndOf="@+id/ivFire"
        app:layout_constraintTop_toTopOf="@+id/ivFire" />

    <TextView
        android:id="@+id/tvChallengesDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="8dp"
        android:textColor="@color/colorSmokeWhite"
        app:layout_constraintEnd_toEndOf="@+id/tvChallengeViews"
        app:layout_constraintStart_toStartOf="@+id/tvChallengeViews"
        app:layout_constraintTop_toBottomOf="@+id/tvChallengeViews" />

    <TextView
        android:id="@+id/tvChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="8dp"
        android:textColor="@color/colorSmokeWhite"
        android:layout_marginBottom="@dimen/margin_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>