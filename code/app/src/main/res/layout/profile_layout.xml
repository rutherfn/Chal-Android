<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvProfilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProfileFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Will Shelton"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textSize="@dimen/header_text_size"
        app:layout_constraintEnd_toEndOf="@+id/cvProfilePicture"
        app:layout_constraintStart_toStartOf="@+id/cvProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/cvProfilePicture" />

    <TextView
        android:id="@+id/tvProfileSubInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textColor="@color/colorBlack"
        android:text="24, Milwaukee. WI"
        android:textSize="@dimen/sub_header_text_size"
        app:layout_constraintStart_toStartOf="@+id/tvProfileFullName"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileFullName" />

    <TextView
        android:id="@+id/tvBodyMessage"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileSubInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>