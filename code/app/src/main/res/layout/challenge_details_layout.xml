<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/padding_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivChallengesDetailsHeader"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/challenges_details_background_height"
        android:alpha="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ivChallengesDetailsHeaderBackground"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/challenges_details_background_height"
        android:alpha="0.8"
        android:background="@color/colorLightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ivChallengeCategory"
        android:layout_width="@dimen/challenges_details_image_height"
        android:layout_height="@dimen/challenges_details_image_width"
        android:layout_marginTop="@dimen/padding_30dp"
        android:layout_marginStart="@dimen/margin_6dp"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:padding="@dimen/padding_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvChallengeCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="@dimen/body_text_size"
        android:textColor="@color/colorSmokeWhite"
        android:layout_marginStart="@dimen/margin_2dp"
        android:layout_marginLeft="@dimen/margin_2dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivChallengeCategory"
        app:layout_constraintStart_toEndOf="@+id/ivChallengeCategory"
        app:layout_constraintTop_toTopOf="@+id/ivChallengeCategory"
        />

    <TextView
        android:id="@+id/tvChallengeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_4dp"
        android:textColor="@color/colorSmokeWhite"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ivChallengeCategory"
        app:layout_constraintTop_toBottomOf="@+id/ivChallengeCategory"
        />

    <TextView
        android:id="@+id/tvChallengeDescDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_10dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvChallengeTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvChallengeTitle"
        />

    <Button
        android:id="@+id/btnJoinChallenge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGray"
        android:padding="@dimen/padding_10dp"
        android:text="Join Challenge"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/ivChallengesDetailsHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
