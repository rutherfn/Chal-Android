<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorSmokeWhite"
    android:paddingBottom="@dimen/padding_10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/padding_10dp"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/padding_10dp"
            android:layout_height="match_parent"
>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvUserFirebase"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textSize="@dimen/sub_header_text_size"
        app:layout_constraintStart_toEndOf="@+id/cvUserFirebase"
        app:layout_constraintTop_toTopOf="@+id/cvUserFirebase" />

    <TextView
        android:id="@+id/tvSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/body_text_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        app:layout_constraintStart_toEndOf="@+id/cvUserFirebase"
        app:layout_constraintTop_toBottomOf="@+id/tvUserFullName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>