<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorSmokeWhite"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbUploadPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tvClickMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_me_to_take_a_picture"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintEnd_toEndOf="@+id/cvTakeAPhoto"
            app:layout_constraintStart_toStartOf="@+id/cvTakeAPhoto"
            app:layout_constraintTop_toBottomOf="@+id/tbUploadPhoto" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cvTakeAPhoto"
            android:layout_width="@dimen/iv_take_a_picture_width"
            android:layout_height="@dimen/iv_take_a_picture_height"
            android:src="@drawable/ic_photo"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvClickMe" />

        <TextView
            android:id="@+id/tvTakeAPictureOrChooseFromLibrary"
            android:layout_width="@dimen/tv_take_picture_or_choose_from_library_width"
            android:layout_height="wrap_content"
            android:text="@string/take_a_picture_or_choose_from_library"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_20dp"
            android:textSize="@dimen/header_text_size"
            app:layout_constraintEnd_toEndOf="@+id/cvTakeAPhoto"
            app:layout_constraintStart_toStartOf="@+id/cvTakeAPhoto"
            app:layout_constraintTop_toBottomOf="@+id/cvTakeAPhoto" />

        <Button
            android:id="@+id/btnChooseFormLibrary"
            android:layout_width="@dimen/btn_choose_from_library_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/corner_button"
            android:textStyle="bold"
            android:textSize="@dimen/sub_header_text_size"
            android:text="@string/choose_from_library"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/tvTakeAPictureOrChooseFromLibrary"
            app:layout_constraintStart_toStartOf="@+id/tvTakeAPictureOrChooseFromLibrary"
            app:layout_constraintTop_toBottomOf="@+id/tvTakeAPictureOrChooseFromLibrary" />

        <Button
            android:id="@+id/btnAddPhotoLater"
            android:layout_width="@dimen/btn_add_profile_image_later_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="@string/add_photo_later"
            android:background="@drawable/corner_button"
            android:textSize="@dimen/sub_header_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btnChooseFormLibrary"
            app:layout_constraintStart_toStartOf="@+id/btnChooseFormLibrary"
            app:layout_constraintTop_toBottomOf="@+id/btnChooseFormLibrary" />

        <Button
            android:id="@+id/btnClearPhoto"
            android:layout_width="@dimen/btn_clear_photo_width"
            android:layout_height="wrap_content"
            android:text="@string/clear_photo"
            android:textStyle="bold"
            android:textSize="@dimen/sub_header_text_size"
            android:background="@drawable/corner_button"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintEnd_toEndOf="@+id/btnAddPhotoLater"
            app:layout_constraintStart_toStartOf="@+id/btnAddPhotoLater"
            app:layout_constraintTop_toBottomOf="@+id/btnAddPhotoLater" />

        <Button
            android:id="@+id/btnContinueUpload"
            android:layout_width="@dimen/btn_continue_creating_width"
            android:layout_height="wrap_content"
            android:text="@string/clear_photo"
            android:textStyle="bold"
            android:textSize="@dimen/sub_header_text_size"
            android:background="@drawable/corner_button"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintEnd_toEndOf="@+id/btnClearPhoto"
            app:layout_constraintStart_toStartOf="@+id/btnClearPhoto"
            app:layout_constraintTop_toBottomOf="@+id/btnClearPhoto" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>