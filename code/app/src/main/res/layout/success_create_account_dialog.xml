<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/padding_10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivSuccessCreateAccount"
        android:layout_width="@dimen/success_create_account_width"
        android:layout_height="@dimen/success_create_account_height"
        android:background="@drawable/ic_success"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSuccessCreating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textSize="@dimen/header_text_size"
        android:textAlignment="center"
        android:text="@string/successful"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSuccessCreateAccount" />

    <TextView
        android:id="@+id/tvLoadingYourAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textSize="@dimen/header_text_size"
        android:text="@string/loading_account"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSuccessCreating" />

    <ProgressBar
        android:id="@+id/pbLoadingYourAccount"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintEnd_toEndOf="@+id/tvLoadingYourAccount"
        app:layout_constraintStart_toStartOf="@+id/tvLoadingYourAccount"
        app:layout_constraintTop_toBottomOf="@+id/tvLoadingYourAccount" />

</androidx.constraintlayout.widget.ConstraintLayout>