<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvPersonProfile"
        android:layout_width="@dimen/cv_search_icon_height"
        android:layout_height="@dimen/cv_search_icon_width"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sub_header_text_size"
        android:padding="@dimen/padding_10dp"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:layout_marginStart="@dimen/margin_6dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvPersonProfile"
        app:layout_constraintStart_toEndOf="@+id/cvPersonProfile"
        app:layout_constraintTop_toTopOf="@+id/cvPersonProfile"
        />

</androidx.constraintlayout.widget.ConstraintLayout>