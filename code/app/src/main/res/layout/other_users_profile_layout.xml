<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSmokeWhite"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/padding_10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvProfilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProfileFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Nicholas Rutherford"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textSize="@dimen/header_text_size"
        app:layout_constraintEnd_toEndOf="@+id/cvProfilePicture"
        app:layout_constraintStart_toStartOf="@+id/cvProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/cvProfilePicture" />

    <TextView
        android:id="@+id/tvProfileSubInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="20, Milwaukee. WI"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sub_header_text_size"
        app:layout_constraintEnd_toEndOf="@+id/tvProfileFullName"
        app:layout_constraintStart_toStartOf="@+id/tvProfileFullName"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileFullName" />

    <TextView
        android:id="@+id/tvBodyMessage"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingLeft="@dimen/padding_10dp"
        android:paddingRight="@dimen/padding_10dp"
        android:text="TextView"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileSubInfo" />

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_button"
        android:text="Send Message"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:textColor="@color/colorSmokeWhite"
        app:layout_constraintStart_toStartOf="@+id/tvBodyMessage"
        app:layout_constraintTop_toBottomOf="@+id/tvBodyMessage" />

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_button"
        android:text="Add Friend"
        android:textColor="@color/colorSmokeWhite"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSendMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>