<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSmokeWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cvChallenge"
                android:layout_width="@dimen/cv_active_challenges_height"
                android:layout_height="@dimen/cv_active_challenges_width"
                android:layout_marginTop="@dimen/padding_10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvChallengesTitle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:text="@string/sample_challenge_title"
                android:textSize="@dimen/sub_header_text_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/cvChallenge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cvChallenge"
                app:layout_constraintTop_toTopOf="@+id/cvChallenge" />

            <TextView
                android:id="@+id/tvCategoryChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:text="@string/category_education"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvChallengesTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvChallengesTitle" />

            <TextView
                android:id="@+id/tvTeaserChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_20dp"
                android:text="@string/teaser_challenge"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvCategoryChallenge"
                app:layout_constraintTop_toBottomOf="@+id/tvCategoryChallenge" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>