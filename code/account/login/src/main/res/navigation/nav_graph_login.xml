<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/fragmentLogin">

    <include app:graph="@navigation/nav_graph_forgot_password"/>
    <include app:graph="@navigation/nav_graph_sign_up"/>
    <include app:graph="@navigation/nav_graph_news_feed"/>

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.nicholasrutherford.chal.account.login.LoginFragment"
        android:label="splash_2"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_ForgotPasswordFragment_to_nav_graph_b"
            app:destination="@+id/nav_graph_forgot_password"
            />

        <action
            android:id="@+id/action_SignUpFragment_to_nav_graph"
            app:destination="@+id/nav_graph_sign_up"
            />

        <action
            android:id="@+id/action_BewsFragment_to_nav_graph"
            app:destination="@+id/nav_graph_news_feed"
            />

    </fragment>
</navigation>