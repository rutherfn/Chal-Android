<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="@dimen/padding_16dp"
    >

    <TextView
        android:id="@+id/tvProgressAddedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textSize="@dimen/header_text_size"
        android:text="@string/progress_added_title"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvProgressAddedDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_24dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:textSize="@dimen/body_text_size"
        android:text="@string/progress_added_desc"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@+id/tvProgressAddedTitle"
        app:layout_constraintStart_toStartOf="@+id/tvProgressAddedTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvProgressAddedTitle"
        />

    <Button
        android:id="@+id/btnAddMoreProgress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_button"
        android:text="@string/add_more_progress"
        android:textColor="@color/colorSmokeWhite"
        android:textSize="@dimen/sub_header_text_size"
        android:textStyle="bold"
        android:padding="@dimen/padding_10dp"
        android:layout_marginTop="@dimen/margin_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvProgressAddedDesc"
        app:layout_constraintTop_toBottomOf="@+id/tvProgressAddedDesc"
        />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_button"
        android:text="@string/continue_creating"
        android:textColor="@color/colorSmokeWhite"
        android:textSize="@dimen/sub_header_text_size"
        android:textStyle="bold"
        android:padding="@dimen/padding_10dp"
        android:layout_marginTop="@dimen/margin_30dp"
        app:layout_constraintEnd_toEndOf="@+id/btnAddMoreProgress"
        app:layout_constraintStart_toStartOf="@+id/btnAddMoreProgress"
        app:layout_constraintTop_toBottomOf="@+id/btnAddMoreProgress"
        />

</androidx.constraintlayout.widget.ConstraintLayout>