<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clAddFriend"
    android:visibility="gone"
    android:paddingBottom="@dimen/padding_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFriends"
        android:layout_width="@dimen/image_friends_width"
        android:layout_height="@dimen/image_friends_height"
        android:layout_marginTop="@dimen/margin_18dp"
        android:background="@drawable/ic_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:padding="@dimen/padding_6dp"
        android:text="@string/looks_like_you_dont_have_any_friends"
        android:textSize="@dimen/sub_header_text_size"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/ivFriends"
        app:layout_constraintStart_toStartOf="@+id/ivFriends"
        app:layout_constraintTop_toBottomOf="@+id/ivFriends"
        />

    <Button
        android:id="@+id/btnAddFriendEmptyState"
        android:layout_width="@dimen/button_add_empty_state_width"
        android:layout_height="wrap_content"
        android:text="@string/add_friends"
        android:layout_marginStart="@dimen/margin_6dp"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@drawable/corner_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
