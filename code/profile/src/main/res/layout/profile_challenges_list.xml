<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/padding_30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clProfileChallengesList"
    app:cardElevation="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvChallengeCategory"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvChallengeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="@dimen/padding_4dp"
        android:layout_marginStart="@dimen/margin_6dp"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:textSize="@dimen/sub_header_text_size"
        app:layout_constraintStart_toEndOf="@+id/cvChallengeCategory"
        app:layout_constraintTop_toTopOf="@+id/cvChallengeCategory"
        />

            <TextView
        android:id="@+id/tvChallengeCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:textSize="@dimen/body_text_size"
        app:layout_constraintStart_toStartOf="@+id/tvChallengeTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvChallengeTitle"
        />

            <TextView
                android:id="@+id/tvChallengeCurrentDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/body_text_size"
                android:paddingBottom="@dimen/padding_8dp"
                app:layout_constraintStart_toStartOf="@+id/tvChallengeCategory"
                app:layout_constraintTop_toBottomOf="@+id/tvChallengeCategory"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:paddingTop="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/colorLightGray"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>