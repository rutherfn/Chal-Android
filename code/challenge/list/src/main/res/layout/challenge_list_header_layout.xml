<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivChallengesHeader"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/challenges_background_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/ivChallengesHeaderBackground"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/challenges_background_height"
        android:alpha="0.8"
        android:background="@color/colorLightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvChallenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:padding="@dimen/padding_12dp"
        android:textColor="@color/colorSmokeWhite"
        android:textStyle="bold"
        android:textSize="@dimen/sub_header_text_size"
        android:text="@string/challenges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvChallengesDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:padding="@dimen/padding_12dp"
        android:text="@string/challenge_description"
        android:textColor="@color/colorSmokeWhite"
        android:layout_marginBottom="@dimen/margin_40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvChallenges"
        app:layout_constraintTop_toBottomOf="@+id/tvChallenges"
        />

</androidx.constraintlayout.widget.ConstraintLayout>